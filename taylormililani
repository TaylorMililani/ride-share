def how_many_rides(array)
  i = 0
  4.times do
    puts "Driver DR000#{i + 1} gave #{array[i].length} rides\n\n"
  i += 1
  end
end

how_many_rides(rides)

def how_much_money(array)  
  i = 0
  4.times do
    if array[i].length == 3
      puts "Driver DR000#{i +1} made $#{array[i][0][:cost] + array[i][1][:cost] + array[i][2][:cost]}\n\n"
    else
      puts "Driver DR000#{i + 1} made $#{array[i][0][:cost] + array[i][1][:cost]}\n\n"
    end 
    i += 1   
  end
end

how_much_money(rides)

def avg_rating(array)
  i = 0
  4.times do
    if array[i].length == 3
     x = (array[i][0][:rating] + array[i][1][:rating] + array[i][2][:rating]) / 3.0
     
     puts "Driver DR000#{i + 1}'s average rating was #{x.round(2)}"
    else
      x = (array[i][0][:rating] + array[i][1][:rating]) / 2.0
      puts "Driver DR000 #{i + 1}'s average rating was #{x.round(2)}"
    end  
    i += 1
  end
end

avg_rating(rides)

def max_money(array)  
  money = []
  i = 0
  4.times do
    if array[i].length == 3
      x = array[i][0][:cost] + array[i][1][:cost] + array[i][2][:cost]
      money << x
    else
      x = array[i][0][:cost] + array[i][1][:cost]
      money << x
    end 
    i += 1 
  end
  puts "Driver DR000#{money.index(money.max) +1} made the most money with a total of $#{money.max}\n\n"
end

max_money(rides)

def max_rating(array)
  ratings = []
  i = 0
  4.times do
    if array[i].length == 3
      x = (array[i][0][:rating] + array[i][1][:rating] + array[i][2][:rating]) / 3.0
      ratings << x
    else
      x = (array[i][0][:rating] + array[i][1][:rating]) / 2.0 
      ratings << x
    end 
    i += 1
  end  
  puts "Driver DR000#{ratings.index(ratings.max) +1} had the highest average rating with #{ratings.max}"
end

max_rating(rides)
